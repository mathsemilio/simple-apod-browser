<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/APoDListScreen">

    <fragment
        android:id="@+id/APoDListScreen"
        android:name="br.com.mathsemilio.simpleapodbrowser.ui.screens.apodlist.APoDListFragment"
        android:label="@string/latest"
        tools:layout="@layout/apod_list_screen">

        <action
            android:id="@+id/action_apod_list_to_apod_detail_screen"
            app:destination="@id/APoDDetailScreen" />

    </fragment>

    <fragment
        android:id="@+id/APoDFavoritesScreen"
        android:name="br.com.mathsemilio.simpleapodbrowser.ui.screens.apodfavoriteslist.APoDFavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/apod_favorites_list_screen">

        <action
            android:id="@+id/action_apod_favorites_to_apod_detail_screen"
            app:destination="@id/APoDDetailScreen" />

    </fragment>

    <fragment
        android:id="@+id/APoDDetailScreen"
        android:name="br.com.mathsemilio.simpleapodbrowser.ui.screens.apoddetail.APoDDetailFragment"
        android:label="@string/details"
        tools:layout="@layout/apod_detail_screen">

        <action
            android:id="@+id/action_apod_detail_to_apod_image_detail_screen"
            app:destination="@id/APoDImageDetailScreen"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_apod_detail_to_apod_list_screen"
            app:destination="@id/APoDListScreen"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/APoDListScreen" />

        <action
            android:id="@+id/action_apod_detail_to_apod_favorites_screen"
            app:destination="@id/APoDFavoritesScreen"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/APoDFavoritesScreen" />

    </fragment>

    <fragment
        android:id="@+id/APoDImageDetailScreen"
        android:name="br.com.mathsemilio.simpleapodbrowser.ui.screens.apodimagedetailscreen.APoDImageDetailFragment"
        tools:layout="@layout/apod_image_detail_screen">

        <action
            android:id="@+id/action_apod_image_detail_to_apod_detail_screen"
            app:destination="@id/APoDDetailScreen"
            app:launchSingleTop="true"
            app:popUpTo="@id/APoDDetailScreen" />

    </fragment>

</navigation>